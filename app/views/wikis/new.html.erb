<h1>New Wiki</h1>

<div class="row">
    <div class="col-md-8">
        <%= form_for @wiki do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body" %>
            </div>
            <div class="form-group">
                <%= f.label :private, class: 'checkbox' do %>
                    <%= f.check_box :private %> Private wiki
                <% end %>
            </div>
            <div class="form-group">
                <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
        <div class="form-group">
            <%= render partial: 'collaborators/collaborators', locals: { wiki: @wiki, user: current_user } %>
        </div>
    </div>
</div>